<br>
<h2>Pick A Pack</h2>

<% @packs.each do |pack| %>
  <% if !current_user.packs.include?(pack) %>
    <div class="pack-container">
    <br>
    <br>
      <h4>Name: <%= pack.name %></h4><br>
      <img src="<%= pack.pack_image_url %>" alt="<%= pack.name %> photo" height="500" width="900"><br><br>
        <div class="item--content">
          <form action="/add_pack_to_user/<%= pack.id %>" method="post">
            <input type="submit" name="submit" value="Select This Pack">
          </form>
          </div>
    </div>
    <% else %>
    <h4> You have chosen 
      <a href="/packs/<%= pack.id %>">
        <%= pack.name %> 
      </a>
    </h4>    
  <% end %>
<% end %>