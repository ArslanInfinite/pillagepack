<% @items.each do |item| %>
<div class="card" >
  <div class="card-body">
    <h4 class="card-name"><a href="/items/<%= item.id %>"> <%= item.name %></a></h4>
    <p class="card-description"><%= item.description %></p>
    <img src="<%= item.item_image_url %>" class="card-img-top" alt="<%= item.name %> photo">
      <form action="/add_item_to_pack/<%= item.id %>" method="post">
        <select name="pack_id">
          <% current_user.packs.each do |pack| %>
            <option value="<%= pack.id %>"><%= pack.name %></option>
          <% end %>
        </select> 
          <% if current_user.packs.any? %>
              <input type="submit" name="submit" value="Add">
          <% else %>
            <p>Got to the packs page and select a pack</p>
          <% end %>
      </form>
        <br>
    </div>  
  </div>
<% end %>
