  <h1>Create New Item</h1>
  <form action="/items" method="post">
    <div class="form-group">
    <label for="Name">Name</label>
      <input type="text" id="Name" name="name"><br>
      <label for="Category">Category</label>
      <select name="category">
          <option value="Mechs">Mechs</option>
          <option value="Weapons">Weapons</option>
          <option value="Vehicles">Vehicles</option>
          <option value="Sentries">Sentries</option>
          <option value="Buddies">Buddies</option>
          <option value="Barriers">Barriers</option>
      </select><br>
      <label for="Description">Description</label>
      <input type="text" id="Description" name="description"><br>
      <label for="Image Source URL">Image Source URL</label>
      <input type="text" id="Image Source URL" name="item_image_url"><br>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>